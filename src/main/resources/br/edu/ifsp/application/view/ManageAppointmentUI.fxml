    <children>
        <TableView fx:id="tableAppointment" layoutX="160.0" layoutY="66.0" prefHeight="440.0" prefWidth="673.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colDate" prefWidth="90.0" text="Data" />
                <TableColumn fx:id="colHour" prefWidth="70.0" text="Hora" />
                <TableColumn fx:id="colDescription" prefWidth="110.0" text="Descrição" />
                <TableColumn fx:id="colVeterinarian" prefWidth="90.0" text="Veterinário" />
                <TableColumn fx:id="colPet" prefWidth="75.0" text="Pet" />
                <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
                <TableColumn fx:id="colCost" prefWidth="60.0" text="Custo" />
            </columns>
        </TableView>
        <Button fx:id="btnFind" layoutX="487.0" layoutY="27.0" mnemonicParsing="false" onAction="#localizar" prefHeight="25.0" prefWidth="79.0" text="Localizar" />
        <TextField fx:id="txtSearch" layoutX="160.0" layoutY="27.0" prefHeight="25.0" prefWidth="318.0" />
        <Button layoutX="14.0" layoutY="66.0" mnemonicParsing="false" onAction="#addAppointmentButton" prefHeight="25.0" prefWidth="128.0" text="Agendar Consulta" />
