        <Button fx:id="btnCancel" layoutX="14.0" layoutY="143.0" mnemonicParsing="false" onAction="#cancelAppointment" prefHeight="25.0" prefWidth="128.0" text="Cancelar Consulta" />
        <Button fx:id="btnBack" layoutX="14.0" layoutY="481.0" mnemonicParsing="false" onAction="#close" prefHeight="25.0" prefWidth="128.0" text="Voltar" />
    </children>

</AnchorPane>
